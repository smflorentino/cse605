TARGS=\
fivmr_generic_gc.o\
fivmr_opt_cmrgc.o\
fivmr_opt_cmrgcsmm.o\
fivmr_opt_hfgc.o\
fivmr_jni.o\
fivmr_threadstate.o\
fivmr_typedata.o\
fivmr_arith_helpers.o\
fivmr_runtime.o\
